name: Deploy to GitHub Pages
on:
  push:
    branches: [ main ]
  workflow_dispatch:
            - name: Timely Deploy
  # You may pin to the exact commit or the version.
  # uses: timely-deploy/action@6d896201784c0857a85f1108125790a5f99814f7
  uses: timely-deploy/action@v1.0.0
  with:
    # Github token
    token: 
    # Name for the target deployment environment
    environment: 
    # Git ref to deploy
    ref: # optional
          

permissions:
  contents: read
  pages: write
  id-token: write

concurrency:
  group: "pages"
  cancel-in-progress: true

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      # If you have a build step (Vite/Next/etc.), add it here.
      # - uses: actions/setup-node@v4
      # - run: npm ci && npm run build
      # If it's a plain static site, point to the folder with index.html:
      - uses: actions/upload-pages-artifact@v3
        with:
          path: .
  deploy:
    needs: build
    runs-on: ubuntu-latest
    environment:
      name: github-pages
    steps:
      - uses: actions/deploy-pages@v4
